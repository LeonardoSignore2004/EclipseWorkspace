
public class Spettatore extends Thread{
	
	public Spettatore (String nome) {
		this.currentThread().setName(nome);
	}
	
	public boolean acquistaBiglietto () {
		synchronized (Spettatore.class) {
			if (Teatro.numPersone<Teatro.maxPersone) {
			Teatro.numPersone++;
			System.out.print(this.currentThread().getName() + " ha prenotato con successo");
			return true;
		} else {
			System.out.println("Il teatro Ã¨ pieno");
			return false;
			}
		}
	}
	
}
