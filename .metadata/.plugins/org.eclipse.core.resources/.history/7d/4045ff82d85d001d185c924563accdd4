
public class Main {

	public static void main(String[] args) {
		
		Teatro.setNum_persone(3);
		
		Spettatore spettatori[] = new Spettatore [3];
		
		for (int i=0;i<spettatori.length;i++) {
			spettatori[i].start();
		}
		for (int k=0;k<spettatori.length;k++) {
			try {
				spettatori[k].join();
			} catch (InterruptedException e) {
				e.printStackTrace();
			}
		}
		System.out.println("num_persone: "+Teatro.num_persone);
	}

}
